<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/beranda"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_gradient_black_2"
    android:orientation="vertical">

    <!-- Search Bar dan Icon -->

    <!-- Scrollable Content -->

    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">



        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/cari"
            android:drawableLeft="@drawable/iconcari"
            android:hint="Cari Objek Lelang"
            android:padding="10dp"
            android:textColor="#000" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:src="@drawable/scan"
            app:tint="#FFFFFF"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:src="@drawable/notification"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerBar"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Banner -->
            <ImageView
                android:id="@+id/bannerContainer"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:contentDescription="Banner"
                android:scaleType="centerCrop"
                android:src="@drawable/iklan" />

            <!-- Kategori Horizontal -->
            <HorizontalScrollView
                android:id="@+id/categoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Contoh kategori -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bulat"
                            android:padding="0dp"
                            android:src="@drawable/construction" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Alat"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bulat"
                            android:padding="0dp"
                            android:src="@drawable/brick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Material"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bulat"
                            android:padding="14dp"
                            android:src="@drawable/wood" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Olahan"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bulat"
                            android:padding="7dp"
                            android:src="@drawable/kalengcat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="finishing"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bulat"
                            android:padding="8dp"
                            android:src="@drawable/window" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Komponen"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <!-- Tambahkan kategori lainnya di sini -->

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Jadwal Lelang -->
        <FrameLayout
            android:id="@+id/nav_host_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Jadwal Lelang"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/auctionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/kolom"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="SEMEN 5 SAK"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginTop="0dp"
                        android:text="17 April 2025, 10:00 WIB"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginVertical="1dp"
                        android:text="Online"
                        android:textColor="#00AA00"
                        android:layout_gravity="end"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp"
                android:layout_marginVertical="9dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jadwal Lelang"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/allProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#A73B4D"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:padding="8dp"
                android:layout_marginVertical="9dp"
                android:background="@drawable/kolom">

                <!-- Gambar Produk -->
                <ImageView
                    android:id="@+id/imageProduk"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/batako" />

                <!-- Status Lelang -->
                <TextView
                    android:id="@+id/statusLelang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/live"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Live"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp" />

                <!-- Judul -->
                <TextView
                    android:id="@+id/judulBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bata Beton â€“ 5k Buah"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <!-- Harga -->
                <TextView
                    android:id="@+id/hargaBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 1.370.000"
                    android:textColor="#C0392B"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <!-- Tanggal dan Lokasi -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/calendar"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17 April 2025"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/location"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SURABAYA"
                        android:textSize="12sp" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp" />


</RelativeLayout>
